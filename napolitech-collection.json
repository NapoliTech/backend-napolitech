{
  "info": {
    "name": "Napolitech - Ajustada",
    "_postman_id": "napolitech-ajustada-001",
    "description": "Collection ajustada para uso com mock e ambiente Local.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{emailLogin}}\",\n  \"senha\": \"{{senhaLogin}}\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/login", "host": ["{{baseUrl}}"], "path": ["api", "login"] }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if(json.token){",
                  "   pm.environment.set('token', json.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },

    {
      "name": "Usuário",
      "item": [
        {
          "name": "Exibir Usuário por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/1"
          }
        },
        {
          "name": "Exibir Usuário por Email",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/email/marcos@gmail.com"
          }
        },
        {
          "name": "Atualizar Usuário",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Marcos Paulo\",\n  \"email\": \"marcos@gmail.com\",\n  \"senha\": \"P@ssw0rd\",\n  \"cpf\": \"123.123.123-11\",\n  \"telefone\": \"(11) 99999-9999\",\n  \"dataNasc\": \"1989-01-10\"\n}"
            },
            "url": "{{baseUrl}}/api/1"
          }
        }
      ]
    },

    {
      "name": "Produto",
      "item": [
        {
          "name": "Listar Produtos",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/produtos"
          }
        },
        {
          "name": "Produto por ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/produtos/1"
          }
        }
      ]
    },

    {
      "name": "Pedido",
      "item": [
        {
          "name": "Criar Pedido",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clienteId\": 1,\n  \"nomeCliente\": \"Marcos Paulo\",\n  \"telefone\": \"(11) 99999-9999\",\n  \"enderecoId\": 1,\n  \"observacao\": \"Sem cebola\",\n  \"tipoEntrega\": \"DELIVERY\",\n  \"itens\": [\n    {\n      \"produto\": [1, 2],\n      \"quantidade\": 1,\n      \"tamanhoPizza\": \"MEIO_A_MEIO\",\n      \"bordaRecheada\": \"CATUPIRY\"\n    },\n    {\n      \"produto\": [3],\n      \"quantidade\": 1\n    }\n  ]\n}"
            },
            "url": "{{baseUrl}}/api/pedidos"
          }
        },
        {
          "name": "Listar Pedidos",
          "request": {
