            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/pedidos"
          }
        }
      ]
    },

    {
      "name": "Endereço",
      "item": [
        {
          "name": "Listar Endereços",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/enderecos"
          }
        },
        {
          "name": "Buscar por Email",
          "request": {
